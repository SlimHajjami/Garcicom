        <div class="col-md-6 col-xl-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">To do list</h4>
                    <div>
                        <div class="add-items d-flex">
                            <form id="form">

                                <h4 class="card-title">Todo list</h4>
                                <div class="add-items d-flex">
                                    <input type="text" class="form-control todo-list-input" placeholder="What do you need to do today?" id="description">
                                    <button class="add btn btn-primary font-weight-bold todo-list-add-btn" id="add-task" onclick="test()">Add </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="list-wrapper">
                        <ul class="d-flex flex-column-reverse text-white todo-list todo-list-custom">
                            {% for x in TodoA %}
                                {% if x.etat == "Fini" %}
                                <li class="completed">
                                    {% else %} <li> {% endif %}
                                    <div class="form-check form-check-primary"  >
                                        <label class="form-check-label" >
                                            <a href="{{ path("check", {id: x.id}) }}"> <input class="checkbox" type="checkbox"   }> <p id="Todo">{{ x.desription }}</p> <i class="input-helper"></i></a>

                                        </label>

                                    </div>

                                    <i class="remove mdi mdi-close-box"></i>

                                </li>
                            {% endfor %}

                        </ul>

                    </div>

                </div>

            </div>

        </div>
